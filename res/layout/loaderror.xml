        android:layout_marginRight="17dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <Button android:layout_width="wrap_content" android:text="再取得" android:layout_height="wrap_content" android:id="@+id/button1"></Button>
